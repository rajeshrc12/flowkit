generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  email     String     @unique
  name      String
  workflows Workflow[]
}

model Workflow {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String @default("New Workflow")
  node   Json?
  edge   Json?
  User   User   @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}
